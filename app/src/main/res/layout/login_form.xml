<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_radius_form"
    android:layout_gravity="bottom"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"

            android:text="예시 텍스트"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/et_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"

            android:hint="이메일 주소"
            android:textColorHint="@color/theme_light"
            android:textColor="@color/theme_light"
            android:backgroundTint="@color/theme_light"
            android:textCursorDrawable="@drawable/edit_text_cursor_theme"

            />


        <EditText
            android:id="@+id/et_email_pw_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:hint="비밀번호"
            android:inputType="textPassword"

            android:textColorHint="@color/theme_light"
            android:textColor="@color/theme_light"
            android:backgroundTint="@color/theme_light"
            android:textCursorDrawable="@drawable/edit_text_cursor_theme"
            />



        <android.widget.Button
            android:id="@+id/btn_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"

            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:text="이메일 계정으로 시작하기"

            android:background="@drawable/button_theme_default_layout"
            android:paddingLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/theme_light"
            android:textSize="20dp"
            android:textStyle="bold"

            android:layout_gravity="center_horizontal"


            />

        <android.widget.Button
            android:id="@+id/btn_google_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/google_icon"
            android:paddingLeft="20dp"

            android:text="구글 계정으로 시작하기"

            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"

            android:background="@drawable/button_theme_default_layout"
            />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_facebook_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/facebook_icon"
            android:paddingLeft="20dp"

            android:text="페이스북 계정으로 시작하기"

            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"

            android:background="@drawable/button_theme_default_layout"
            />

    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>