<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/theme_light"
    >

    <android.widget.Button
        android:id="@+id/btn_app_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_theme_form"

        app:layout_constraintBottom_toTopOf="@id/btn_kakao_login"
        android:layout_marginBottom="20dp"

        android:layout_marginHorizontal="20dp"
        android:text="앱 아이디 로그인"
        android:textColor="@color/theme_light"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <android.widget.Button
        android:id="@+id/btn_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_theme_form"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginHorizontal="20dp"
        android:text="카카오 로그인"
        android:textColor="@color/theme_light"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/chk_box_kakao_auto_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/theme_dark"
        app:layout_constraintTop_toBottomOf="@id/btn_kakao_login"
        app:layout_constraintLeft_toLeftOf="@id/btn_kakao_login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자동 로그인"

        app:layout_constraintLeft_toRightOf="@id/chk_box_kakao_auto_login"
        app:layout_constraintTop_toTopOf="@id/chk_box_kakao_auto_login"
        app:layout_constraintBottom_toBottomOf="@id/chk_box_kakao_auto_login"
        />



</androidx.constraintlayout.widget.ConstraintLayout>