<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_person"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_attribution_theme"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"

            />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_profile"
            app:layout_constraintTop_toTopOf="@id/img_profile"

            android:text="이름"
            android:textColor="@color/black"
            android:textSize="15dp"

            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_profile_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
            app:layout_constraintLeft_toRightOf="@id/img_profile"
            android:layout_marginLeft="10dp"

            android:text="설명"
            android:textSize="15dp"

            />

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            />

        <android.widget.Button
            android:id="@+id/btn_profile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            app:layout_constraintLeft_toRightOf="@id/img_profile"
            app:layout_constraintTop_toBottomOf="@id/tv_profile_description"
            app:layout_constraintBottom_toBottomOf="parent"

            android:background="@drawable/round_fill_button"
            android:layout_margin="10dp"

            />

        <android.widget.Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            app:layout_constraintLeft_toRightOf="@id/btn_profile"
            app:layout_constraintTop_toTopOf="@id/btn_profile"
            app:layout_constraintBottom_toBottomOf="@id/btn_profile"
            android:layout_marginLeft="10dp"

            android:background="@drawable/round_empty_button"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>